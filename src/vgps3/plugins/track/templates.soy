{namespace vgps3.track.templates}

/**
 * @param fixes
 * @param index
 */
{template .infoControl}
  <h3><i class="fa fa-info-circle fa-2x"></i></h3>
  <ul>
    <li title="{round($fixes['elev'][$index] / 0.3048)}ft">Alt: {$fixes['elev'][$index]}m</li>
    <li>AGL: {max($fixes['elev'][$index] - $fixes['elevGnd'][$index], 0)}m</li>
    <li>Vario: {$fixes['vario'][$index]}m/s</li>
    <li>Speed: {$fixes['speed'][$index]}km/h</li>
    <li>{$fixes['time']['hour'][$index]}:{$fixes['time']['min'][$index]}:{$fixes['time']['sec'][$index]}</li>
</ul>
{/template}

/**
 * @param date
 * @param pilot
 */
{template .dateControl}
  <div>
  <i class="fa {if $pilot}fa-user{else}fa-calendar{/if} fa-2x"></i>
  <ul class="pull-left">
    <li>{$date['day']}/{$date['month']}/{$date['year']}</li>
    {if $pilot}
      <li>{$pilot}</li>
    {/if}
  </ul>
  <div>
{/template}
